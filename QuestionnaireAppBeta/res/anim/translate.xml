<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" >

    <translate
        android:duration="500"
        android:fillAfter="false"
        android:fillBefore="false"
        android:fillEnabled="false"
        android:fromXDelta="2000%"
        android:fromYDelta="0"
        android:repeatCount="0"
        android:repeatMode="restart"
        android:startOffset="0"
        android:toXDelta="0"
        android:toYDelta="0" >

        <!--
     fromXDelta : starting x position (horizontal axis) 
     toXDelta : end x position 
     
     fromYDelta : starting y position (vertical axis)
     toYDelta : end y position 
     
     duration : duration in milliseconds of the animation
     startOffset : delay on the animation before starting
     
     fillEnabled : enable/disable the following 2 commands
     fillBefore : revert position to where view started
     fillAfter : view position is where the animation ended
        -->

    </translate>

</set>